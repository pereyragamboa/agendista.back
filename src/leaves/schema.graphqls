schema {
    query: Query
    mutation: Mutation
}

type Leave @key(fields: "id") {
    id: ID!
    from: Date!
    to: Date!
}

input LeaveInput {
    from: Date!
    to: Date!
}

scalar Date

type Query {
    getLeaves(profileId: ID!): [Leave]
}

type Mutation {
    addLeave(profileId: ID!, leave: LeaveInput): Leave
    deleteLeave(leaveId: ID!): Boolean!
}